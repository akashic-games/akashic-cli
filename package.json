{
  "private": true,
  "name": "@akashic/akashic-cli",
  "version": "0.0.1",
  "description": "Command-line utility for akashic game development",
  "scripts": {
    "prepublish": "npm run build",
    "postinstall": "lerna bootstrap --no-ci",
    "build": "lerna run build",
    "test": "npm run lint:md && lerna run test",
    "lint:md": "remark . --frail --no-stdout --quiet --rc-path ./.remarkrc",
    "publish:patch": "node build/updateChangelogAndPublish.js patch",
    "publish:minor": "node build/updateChangelogAndPublish.js minor",
    "publish:major": "node build/updateChangelogAndPublish.js major",
    "publish:force-patch-all": "node build/updateChangelogAndRepublish.js patch",
    "publish:prerelease": "lerna publish prerelease --dist-tag next --yes"
  },
  "author": "DWANGO Co., Ltd.",
  "license": "MIT",
  "changelog": {
    "repo": "akashic-games/akashic-cli",
    "labels": {
      "breaking": "Breaking Change",
      "enhancement": "Enhancement",
      "bug": "Bug Fix",
      "documentation": "Documentation",
      "other": "Other Change",
      "dependencies": "Update Dependencies",
      "republish": "Republish"
    }
  },
  "devDependencies": {
    "@akashic/remark-preset-lint": "~0.1.1",
    "lerna": "^3.13.1",
    "lerna-changelog": "^0.8.2",
    "remark-cli": "~6.0.1",
    "semver": "^5.6.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/akashic-games/akashic-cli.git"
  }
}
