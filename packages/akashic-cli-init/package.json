{
  "name": "@akashic/akashic-cli-init",
  "version": "0.3.15",
  "description": "A module to get your Akashic game started.",
  "main": "lib/index.js",
  "scripts": {
    "prepublish": "npm run clean && npm run build",
    "clean": "rimraf ./lib && rimraf ./spec/build",
    "start": "npm run build && node bin/run",
    "build": "tsc -p ./ && npm run zip",
    "lint": "npm run lint:ts && npm run lint:md",
    "lint:ts": "tslint -c ../tslint.json --project ./tsconfig.json",
    "lint:md": "remark ./*.md --frail --no-stdout --quiet --rc-path ../../.remarkrc",
    "zip": "cd ./templates-src && npm run zip:js && npm run zip:ts && npm run zip:js-min",
    "zip:js": "cd ./templates-src/javascript/ && bestzip ../../templates/javascript.zip *",
    "zip:js-min": "cd ./templates-src/javascript-minimal/ && bestzip ../../templates/javascript-minimal.zip *",
    "zip:ts": "cd ./templates-src/typescript/ && bestzip ../../templates/typescript.zip *",
    "http": "http-server -p 18080 &",
    "test": "npm run test:jasmine",
    "test:jasmine": "istanbul cover --report text --report html --colors -i ./lib/index.js ./node_modules/jasmine/bin/jasmine.js",
    "pretest": "npm run http",
    "posttest": "kill $(lsof -t -i:18080)"
  },
  "author": "DWANGO Co., Ltd.",
  "license": "MIT",
  "bin": {
    "akashic-cli-init": "./bin/run"
  },
  "files": [
    "README.md",
    "bin",
    "lib",
    "templates",
    "package.json"
  ],
  "devDependencies": {
    "@types/commander": "~2.3.0",
    "@types/form-data": "~2.2.1",
    "@types/fs-extra": "~2.1.0",
    "@types/node": "~10.12.7",
    "@types/request": "0.0.42",
    "bestzip": "~2.1.2",
    "http-server": "~0.11.1",
    "istanbul": "^0.4.5",
    "jasmine": "~3.1.0",
    "jasmine-reporters": "~2.0.4",
    "jasmine-terminal-reporter": "~0.9.1",
    "mock-fs": "~4.8.0",
    "remark-cli": "~6.0.1",
    "rimraf": "^2.6.2",
    "tslint": "^5.4.3",
    "typescript": "~2.1.6"
  },
  "typings": "lib/index.d.ts",
  "dependencies": {
    "@akashic/akashic-cli-commons": "0.2.19",
    "@akashic/akashic-cli-config": "0.1.9",
    "commander": "2.8.1",
    "fs-extra": "0.30.0",
    "prompt": "1.0.0",
    "request": "^2.74.0",
    "unzip": "^0.1.11"
  },
  "publishConfig": {
    "access": "public",
    "@akashic:registry": "https://registry.npmjs.org/"
  }
}
