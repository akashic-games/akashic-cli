{
  "name": "@akashic/akashic-cli-stat",
  "version": "0.1.9",
  "description": "Project statistics tool for akashic.",
  "main": "lib/index.js",
  "scripts": {
    "prepublish": "npm run clean && npm run build",
    "clean": "shx rm -rf lib && shx rm -rf spec/build",
    "build": "tsc -p ./",
    "lint": "npm run lint:ts && npm run lint:md",
    "lint:ts": "tslint --type-check -c ../tslint.json --project ./tsconfig.json",
    "lint:md": "remark . --frail --no-stdout --quiet --rc-path ../../.remarkrc",
    "test": "npm run test:jest && npm run lint",
    "test:jest": "jest"
  },
  "author": "DWANGO Co., Ltd.",
  "license": "MIT",
  "bin": {
    "akashic-cli-stat": "./bin/run"
  },
  "files": [
    "README.md",
    "bin",
    "lib",
    "package.json"
  ],
  "devDependencies": {
    "@types/jasmine": "~2.8.2",
    "@types/mock-fs": "~3.6.30",
    "@types/node": "10.12.7",
    "jest": "~24.8.0",
    "mock-fs": "~4.8.0",
    "remark-cli": "~6.0.1",
    "remark-preset-lint-recommended": "~1.0.0",
    "shx": "~0.2.2",
    "tslint": "~5.4.3",
    "typescript": "~2.8.0"
  },
  "typings": "lib/index.d.ts",
  "dependencies": {
    "@akashic/akashic-cli-commons": "0.2.20",
    "commander": "^2.16.0"
  },
  "publishConfig": {
    "access": "public",
    "@akashic:registry": "https://registry.npmjs.org/"
  }
}
