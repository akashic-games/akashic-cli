{
  "compilerOptions": {
    "target": "ES6",
    "module": "Node16",
    "moduleResolution": "Node16",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "types": [
      "express",
      "express-serve-static-core",
      "node",
      "react",
      "socket.io-client"
    ],
    "sourceMap": true,
    "outDir": "../../lib",
    "removeComments": true,
    "downlevelIteration": true,
    "noImplicitAny": true,
    "alwaysStrict": true,
    "useUnknownInCatchVariables": false,
    "skipLibCheck": true,
    "strict": true
  },
  "include": [
    "./**/*.ts",
    "../client/akashic/SocketIOAMFlowClient.ts"
  ],
  "exclude": [
    "./__tests__/**/*.ts"
  ]
}
