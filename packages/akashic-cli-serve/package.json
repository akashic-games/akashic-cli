{
  "name": "@akashic/akashic-cli-serve",
  "version": "2.0.8",
  "description": "A development server for Akashic Engine",
  "type": "module",
  "scripts": {
    "prepare": "npm run setup",
    "prepublish": "npm run build",
    "setup": "npm run copy:material-icons && npm run copy:agv && npm run copy:engine-files",
    "copy:material-icons": "node build/copyIcons.js",
    "copy:agv": "node build/copyAgv.js",
    "copy:engine-files": "node build/updateEngineFiles.js",
    "watch:client": "vite serve src/client/",
    "build": "npm run build:client && npm run build:module && npm run build:server && shx cp ./config/engineFilesVersion.json ./lib/server",
    "build:client": "vite build src/client/ && tsc --noEmit -p src/client/tsconfig.json",
    "build:module": "tsc -p src/client/tsconfig.module.json",
    "build:server": "tsc -p ./src/server",
    "test": "vitest run -r src/server/ && npm run lint",
    "lint": "npm run lint:client && npm run lint:server",
    "lint:client": "eslint -c ./src/client/eslint.config.cjs \"src/client/**/*.ts\" \"src/common/**/*.ts\" \"src/client/**/*.tsx\" --fix",
    "lint:server": "eslint -c ./src/server/eslint.conifg.cjs \"src/server/**/*.ts\" --fix",
    "storybook": "sb dev -p 9001"
  },
  "author": "DWANGO Co., Ltd.",
  "license": "MIT",
  "bin": {
    "akashic-cli-serve": "./bin/run.js"
  },
  "dependencies": {
    "@akashic/akashic-cli-commons": "1.0.0",
    "@akashic/akashic-cli-scan": "1.0.2",
    "@akashic/amflow-util": "^1.3.0",
    "@akashic/game-configuration": "^2.1.0",
    "@akashic/headless-driver": "2.17.5",
    "@akashic/sandbox-configuration": "^2.4.0",
    "@akashic/trigger": "2.1.3",
    "@msgpack/msgpack": "2.8.0",
    "chalk": "5.3.0",
    "chokidar": "4.0.1",
    "commander": "12.1.0",
    "cors": "2.8.5",
    "ejs": "3.1.10",
    "express": "^4.20.0",
    "lodash": "4.17.21",
    "open": "8.4.2",
    "query-string": "6.14.1",
    "rxjs": "7.8.1",
    "socket.io": "4.7.5",
    "socket.io-parser": "4.2.4"
  },
  "devDependencies": {
    "@akashic/agvw": "^1.0.6",
    "@akashic/amflow": "~3.3.0",
    "@akashic/eslint-config": "3.0.2",
    "@akashic/pdi-types": "~1.14.0",
    "@akashic/playlog": "~3.4.0",
    "@storybook/addon-actions": "^8.1.11",
    "@storybook/addon-controls": "^8.1.11",
    "@storybook/builder-vite": "^8.2.9",
    "@storybook/react": "^8.2.0",
    "@storybook/react-vite": "^8.2.9",
    "@types/express": "4.17.21",
    "@types/express-serve-static-core": "4.19.6",
    "@types/node": "22.2.0",
    "@types/query-string": "6.3.0",
    "@types/react": "16.14.62",
    "@types/react-dom": "16.9.25",
    "@types/react-measure": "2.0.12",
    "@types/storybook__react": "5.2.1",
    "@vitejs/plugin-react": "^4.3.2",
    "eslint-plugin-react": "7.35.2",
    "get-port": "5.1.1",
    "material-icons": "1.13.12",
    "mobx": "5.15.7",
    "mobx-react": "6.3.1",
    "react": "16.14.0",
    "react-dom": "16.14.0",
    "react-measure": "2.5.2",
    "scroll-into-view-if-needed": "2.2.31",
    "shx": "0.3.4",
    "socket.io-client": "4.7.5",
    "typescript": "5.6.2",
    "vite": "^5.4.8",
    "vitest": "^2.1.8"
  },
  "overrides": {
    "@types/mime": "4.0.0",
    "vite": {
      "rollup": "npm:@rollup/wasm-node"
    }
  },
  "files": [
    "package.json",
    "README.md",
    "bin",
    "lib",
    "views",
    "www/public"
  ],
  "publishConfig": {
    "access": "public",
    "@akashic:registry": "https://registry.npmjs.org/"
  }
}
