{
  "name": "@akashic/akashic-cli-serve",
  "version": "0.8.20",
  "description": "A development server for Akashic Engine",
  "scripts": {
    "prepublish": "npm run setup && npm run build",
    "setup": "npm run copy:material-icons",
    "copy:material-icons": "shx mkdir -p www/public/thirdparty && shx cp -r node_modules/material-design-icons/iconfont www/public/thirdparty/material-design-icons",
    "copy:agv": "node build/AkashicGameViewWebBuilder.js && shx mkdir -p www/internal/untrusted_loader",
    "copy:engine-files": "node build/updateEngineFiles.js",
    "watch:client": "webpack --mode development --config ./src/client/webpack.config.js --watch",
    "build": "npm run build:client && npm run build:server && shx cp ./config/engineFilesVersion.json ./lib/server",
    "build:client": "webpack --config ./src/client/webpack.config.js",
    "build:server": "tsc -p ./src/server",
    "test": "jest && npm run lint",
    "lint": "npm run lint:client && npm run lint:server",
    "lint:client": "tslint -p ./src/client -c tslint.json 'src/client/**/*.ts*' 'src/common/**/*.ts'",
    "lint:server": "tslint -p ./src/server -c tslint.json 'src/server/**/*.ts'",
    "storybook": "start-storybook -p 9001 -c .storybook -s ./www"
  },
  "author": "DWANGO Co., Ltd.",
  "license": "MIT",
  "bin": {
    "akashic-cli-serve": "./bin/run"
  },
  "dependencies": {
    "@akashic/akashic-cli-commons": "0.5.16",
    "@akashic/headless-driver": "1.1.16",
    "@akashic/trigger": "1.0.0",
    "chalk": "4.1.0",
    "chokidar": "3.4.1",
    "commander": "5.1.0",
    "ejs": "3.1.3",
    "express": "4.17.1",
    "lodash": "4.17.19",
    "socket.io": "2.3.0"
  },
  "devDependencies": {
    "@akashic/amflow": "~1.0.0",
    "@akashic/pdi-types": "~1.0.0",
    "@akashic/playlog": "~2.0.0",
    "@storybook/addon-actions": "4.1.18",
    "@storybook/addon-knobs": "4.1.18",
    "@storybook/react": "4.1.18",
    "@types/express": "4.17.7",
    "@types/express-serve-static-core": "4.17.8",
    "@types/node": "10.17.27",
    "@types/query-string": "6.2.0",
    "@types/react": "16.9.43",
    "@types/react-dom": "16.9.8",
    "@types/socket.io": "1.4.41",
    "@types/socket.io-client": "1.4.33",
    "@types/storybook__addon-actions": "3.4.3",
    "@types/storybook__react": "4.0.2",
    "browserify": "16.5.1",
    "css-loader": "2.1.1",
    "es6-promise": "4.2.8",
    "get-port": "5.1.1",
    "jest": "24.9.0",
    "material-design-icons": "3.0.1",
    "mobx": "4.15.4",
    "mobx-react": "5.4.4",
    "node-fetch": "2.6.0",
    "query-string": "5.1.1",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "scroll-into-view-if-needed": "2.2.25",
    "shx": "0.3.2",
    "socket.io-client": "2.3.0",
    "storybook-addon-jsx": "6.0.1",
    "style-loader": "0.23.1",
    "ts-loader": "4.5.0",
    "tslint": "5.20.1",
    "typescript": "3.9.7",
    "uglify-js": "2.8.29",
    "uglify-save-license": "0.4.1",
    "webpack": "4.43.0",
    "webpack-cli": "3.3.12",
    "whatwg-fetch": "3.2.0"
  },
  "optionalDependencies": {
    "@akashic/akashic-gameview-web": "2.1.0"
  },
  "files": [
    "package.json",
    "README.md",
    "bin",
    "lib",
    "views",
    "www/public"
  ],
  "publishConfig": {
    "access": "public",
    "@akashic:registry": "https://registry.npmjs.org/"
  }
}
