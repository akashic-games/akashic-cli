{
  "name": "@akashic/akashic-cli-commons",
  "version": "1.0.3",
  "description": "The shared definitions and routines for akashic-cli-xxx",
  "type": "module",
  "types": "./lib/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./lib/index.d.ts",
        "default": "./lib/index.js"
      }
    },
    "./lib/*": {
      "import": {
        "types": "./lib/*",
        "default": "./lib/*"
      }
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "prepublish": "npm run clean && npm run build",
    "clean": "shx rm -rf lib",
    "build": "tsc -p ./",
    "test": "npm run test:vitest && npm run test:lint",
    "test:vitest": "vitest run",
    "test:lint": "eslint \"./src/**/*.ts\" --fix",
    "prepublishOnly": "node ../../scripts/generateShrinkwrapJson.js"
  },
  "author": "DWANGO Co., Ltd.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/akashic-games/akashic-cli.git",
    "directory": "packages/akashic-cli-commons"
  },
  "files": [
    "lib",
    "npm-shrinkwrap.json"
  ],
  "devDependencies": {
    "@akashic/eslint-config": "^3.0.2",
    "@types/browserify": "12.0.40",
    "@types/mock-fs": "4.13.4",
    "@types/node": "20.19.33",
    "@types/resolve": "^1.20.6",
    "mock-fs": "5.5.0",
    "mock-require": "^3.0.3",
    "shx": "0.4.0",
    "typescript": "5.9.3"
  },
  "dependencies": {
    "@akashic/game-configuration": "2.5.0",
    "browserify": "17.0.1",
    "editorconfig": "^2.0.0",
    "fs-readdir-recursive": "1.1.0",
    "js-sha256": "^0.11.0",
    "resolve": "^1.22.8"
  },
  "publishConfig": {
    "access": "public",
    "@akashic:registry": "https://registry.npmjs.org/"
  }
}
