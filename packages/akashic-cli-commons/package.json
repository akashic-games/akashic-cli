{
  "name": "@akashic/akashic-cli-commons",
  "version": "1.0.0",
  "description": "The shared definitions and routines for akashic-cli-xxx",
  "type": "module",
  "types": "./lib/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./lib/index.d.ts",
        "default": "./lib/index.js"
      }
    },
    "./lib/*": {
      "import": {
        "types": "./lib/*",
        "default": "./lib/*"
      }
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "prepublish": "npm run clean && npm run build",
    "clean": "shx rm -rf lib",
    "build": "tsc -p ./",
    "test": "npm run test:vitest && npm run test:lint",
    "test:vitest": "vitest run",
    "test:lint": "eslint \"./src/**/*.ts\" --fix"
  },
  "author": "DWANGO Co., Ltd.",
  "license": "MIT",
  "files": [
    "lib"
  ],
  "devDependencies": {
    "@akashic/eslint-config": "^3.0.1",
    "@types/mem-fs": " 2.2.0",
    "@types/node": "20.14.15",
    "@types/resolve": "^1.20.6",
    "memfs": "4.23.0",
    "mock-require": "^3.0.3",
    "shx": "0.3.4",
    "typescript": "5.5.4"
  },
  "dependencies": {
    "@akashic/game-configuration": "2.5.0",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-commonjs": "^28.0.3",
    "editorconfig": "^2.0.0",
    "fs-readdir-recursive": "1.1.0",
    "js-sha256": "^0.11.0",
    "resolve": "^1.22.8",
    "rollup": "4.41.1"
  },
  "publishConfig": {
    "access": "public",
    "@akashic:registry": "https://registry.npmjs.org/"
  }
}
