{
  "name": "@akashic/akashic-cli-export-zip",
  "version": "0.8.0",
  "description": "A module to export akashic game as a zip",
  "main": "lib/index.js",
  "scripts": {
    "prepublish": "npm run clean && npm run build",
    "clean": "rimraf ./lib && rimraf ./spec/build",
    "start": "npm run build && node bin/run",
    "build": "tsc -p ./",
    "lint": "npm run lint:src && npm run lint:spec",
    "lint:src": "eslint -c .eslintrc src/**/*.ts --fix",
    "lint:spec": "eslint -c spec/.eslintrc spec/**/*.ts --fix",
    "test": "npm run test:ts && npm run lint",
    "test:ts": "npm run test:ts:compile && npm run test:ts:jest",
    "test:ts:compile": "npm run build && tsc -p ./spec",
    "test:ts:jest": "jest"
  },
  "author": "DWANGO Co., Ltd.",
  "license": "MIT",
  "bin": {
    "akashic-cli-export-zip": "./bin/run"
  },
  "files": [
    "README.md",
    "bin",
    "lib",
    "templates",
    "package.json"
  ],
  "devDependencies": {
    "@akashic/eslint-config": "0.1.2",
    "@types/archiver": "3.1.1",
    "@types/browserify": "12.0.36",
    "@types/commander": "2.12.0",
    "@types/fs-extra": "9.0.6",
    "@types/fs-readdir-recursive": "1.0.0",
    "@types/jasmine": "3.6.2",
    "@types/mock-fs": "4.13.0",
    "@types/node": "14.14.20",
    "@types/uglify-js": "3.11.1",
    "@typescript-eslint/eslint-plugin": "4.14.0",
    "eslint": "7.18.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jest": "24.1.3",
    "jest": "26.6.3",
    "mock-fs": "4.13.0",
    "rimraf": "3.0.2",
    "tslint": "6.1.3",
    "typescript": "3.9.7"
  },
  "typings": "lib/index.d.ts",
  "dependencies": {
    "@akashic/akashic-cli-commons": "0.7.0",
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.3.1",
    "archiver": "5.1.0",
    "browserify": "~17.0.0",
    "commander": "5.1.0",
    "fs-extra": "^9.0.0",
    "fs-readdir-recursive": "~1.1.0",
    "uglify-js": "3.12.4"
  },
  "publishConfig": {
    "access": "public",
    "@akashic:registry": "https://registry.npmjs.org/"
  }
}
