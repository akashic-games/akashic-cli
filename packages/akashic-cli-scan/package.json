{
  "name": "@akashic/akashic-cli-scan",
  "version": "1.0.5",
  "description": "Command line tool for updating assets and globalScripts.",
  "type": "module",
  "main": "lib/index.js",
  "scripts": {
    "prepublish": "npm run clean && npm run build",
    "clean": "shx rm -rf lib && shx rm -rf spec/build",
    "build": "tsc -p ./",
    "lint": "eslint \"./src/**/*.ts\" --fix",
    "test": "npm run test:vitest && npm run lint",
    "test:vitest": "vitest run",
    "prepublishOnly": "node ../../scripts/generateShrinkwrapJson.js"
  },
  "author": "DWANGO Co., Ltd.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/akashic-games/akashic-cli.git",
    "directory": "packages/akashic-cli-scan"
  },
  "bin": {
    "akashic-cli-scan": "./bin/run.js"
  },
  "files": [
    "bin",
    "lib",
    "npm-shrinkwrap.json"
  ],
  "devDependencies": {
    "@akashic/eslint-config": "3.0.2",
    "@akashic/game-configuration": "2.5.0",
    "@types/image-size": "0.8.0",
    "@types/mock-fs": "4.13.4",
    "@types/node": "24.10.1",
    "mock-fs": "5.5.0",
    "shx": "0.4.0",
    "typescript": "5.9.3",
    "vitest": "^2.0.5"
  },
  "dependencies": {
    "@akashic/akashic-cli-commons": "1.0.3",
    "aac-duration": "0.0.1",
    "chokidar": "^4.0.0",
    "commander": "^12.0.0",
    "image-size": "~1.2.0",
    "music-metadata": "10.9.1",
    "svgson": "^5.2.1",
    "thumbcoil": "~1.2.0"
  },
  "publishConfig": {
    "access": "public",
    "@akashic:registry": "https://registry.npmjs.org/"
  }
}
