{
  "version": "independent",
  "command": {
    "publish": {
      "ignoreChanges": [
        "**/spec/**",
        "**/.storybook/**",
        "package*.json",
        "jest.config.js",
        "tslint.json",
        ".gitignore",
        ".npmrc",
        ".eslintignore",
        ".eslintrc.js"
      ],
      "allowBranch": [
        "master"
      ]
    },
    "version": {
      "exact": true
    },
    "bootstrap": {
      "npmClientArgs": [
        "--no-package-lock"
      ]
    }
  },
  "packages": [
    "packages/*"
  ]
}
